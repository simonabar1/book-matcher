<div class="container">
<h1 class='mx-auto mt-2 text-center'>Most Followed: </h1>

<div class="row m-auto justify-content-center">
  <% @most_followed.each do |user| %>
    <div class="col-md-4 col-sm-12">
      <div class="card user-card m-4">
        <div class="card-block">
          <div class="user-image">
            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="img-radius" alt="User-Profile-Image">
          </div>
          <h6 class="f-w-600 m-t-25 m-b-10"><%= user.nickname %></h6>
          <hr>
          <div class="bg-c-blue counter-block m-t-10 p-20">
            <div class="row">
              <div class="col-6">
                 <i class="fa fa-users"></i> Followers
                <p><%= user.followers.count %></p>
              </div>
              <div class="col-6">
                <i class="fa fa-book"></i> Books
                <p><%= user.books.count %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row justify-content-center user-social-link">
            <div class="d-flex justify-content-center align-items-center">
            <%= link_to 'Details', user_path(user), class: 'btn btn-outline-primary m-2' %>
            <% unless current_user.following?(user) %>
                <%= form_with url: follow_user_path(user), class: 'm-0', method: :post do %>
                  <%= submit_tag "Follow", class: "btn btn-primary" %>
                <% end %>
            <% end %>
            <% if current_user.following?(user) %>
                <%= form_with url: unfollow_user_path(user), method: :delete do %>
                  <%= submit_tag "Unfollow", class: "btn btn-outline-primary m-2" %>
                <% end %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



